
@{
    ViewData["Title"] = "Pirkti";
}
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

        <style>
            input, label {
                display:block;
            }
        </style>
    </head>

    <body>
        <div class="text-center">
            <h2>Pasirinkti pristatymo adresą ir mokėjimo būdą</h2>
        </div>

    <form name="buy" method="post">
        <section>
            <center>
            <label for="address">Adresas</label>
            <select name="address" id="address">
            <option value="1">Lietuva, Kaunas, Žeimenos g. 6</option>
            <option value="2">Lietuva, Vilnius, Minties g. 11</option>
            <option value="3">Lietuva, Klaipėda, Laivų g. 20</option>
            </select>
            <label for="cardType">Kortelės tipas</label>
            <input id="cardType" type="text" value="" name="cardType">
            <label for="cardNr">Kortelės nr.</label>
            <input id="cardNr" type="text" value="" name="cardNr">
            <label for="cvv">CVV</label>
            <input id="cvv" type="text" value="" name="cvv">
            <label for="expiryDate">Galiojimo data</label>
            <input id="expiryDate" type="text" value="" name="expiryDate">
            <label for="cardName">Vardas</label>
            <input id="cardName" type="text" value="" name="cardName">
            <label for="cardSurname">Pavardė</label>
            <input id="cardSurname" type="text" value="" name="cardSurname">

            <label>&nbsp;</label>
            <input type="button" value="Pateikti užsakymą"/>
            </div>
            </center>
        </section>
    </form>
    </body>

</html>
