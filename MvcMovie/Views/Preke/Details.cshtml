
@model MvcMovie.Views.DisplayImageVM
<div class="">

        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header text-dark ml-0  container" style="border-radius: 0px; background-color: antiquewhite;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-dark">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning"> @Model.Product.Price <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-currency-euro" viewBox="0 0 16 16">
    <path d="M4 9.42h1.063C5.4 12.323 7.317 14 10.34 14c.622 0 1.167-.068 1.659-.185v-1.3c-.484.119-1.045.17-1.659.17-2.1 0-3.455-1.198-3.775-3.264h4.017v-.928H6.497v-.936c0-.11 0-.219.008-.329h4.078v-.927H6.618c.388-1.898 1.719-2.985 3.723-2.985.614 0 1.175.05 1.659.177V2.194A6.617 6.617 0 0 0 10.341 2c-2.928 0-4.82 1.569-5.244 4.3H4v.928h1.01v1.265H4v.928z" />
</svg></h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ImageHex" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="color:black;background-color:lavenderblush"></span>
                                        <span class="badge p-3 border" style="color: black;background-color: azure"></span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary" style="font-size: 30px;">@Model.Product.Description</p>
                                        <p class="text-secondary" style="font-size: 30px;">Svoris: @Model.Product.Weight kg.</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Atgal į sąrašą</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
</div>

