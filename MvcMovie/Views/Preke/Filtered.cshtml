@model List<MvcMovie.Models.Preke>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <style>
        #super {
            background-color: cornsilk;
        }

        #premium {
            background-color: rgb(255, 255, 240);
        }
    </style>
</head>

<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Prekių sąrašas</h2>
            </div>
            <div class="col-6 text-right">

      


            </div>
        </div>

        <br /><br />


        <div class="d-flex justify-content-center">
            <table class="entitylist table table-hover">
                <thead>
                    <tr>
                        <th>
                            Pavadinimas
                            @*@Html.DisplayNameFor(model => model[0].Id)*@
                        </th>
                        <th>
                            Kain
                            @*@Html.DisplayNameFor(model => model[0].Name)*@
                        </th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        @if (item.Ad.Equals("SUPER"))
                        {
                            <td id="super">
                                @Html.DisplayFor(model => item.Name)
                            </td>
                            <td id="super">
                                @Html.DisplayFor(model => item.Price) <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-euro" viewBox="0 0 16 16">
                                    <path d="M4 9.42h1.063C5.4 12.323 7.317 14 10.34 14c.622 0 1.167-.068 1.659-.185v-1.3c-.484.119-1.045.17-1.659.17-2.1 0-3.455-1.198-3.775-3.264h4.017v-.928H6.497v-.936c0-.11 0-.219.008-.329h4.078v-.927H6.618c.388-1.898 1.719-2.985 3.723-2.985.614 0 1.175.05 1.659.177V2.194A6.617 6.617 0 0 0 10.341 2c-2.928 0-4.82 1.569-5.244 4.3H4v.928h1.01v1.265H4v.928z" />
                                </svg>
                            </td>
                            <td id="super" style="color: aquamarine; font-size: 25px; font-weight: 900; ">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-gem" viewBox="0 0 16 16">
                                    <path d="M3.1.7a.5.5 0 0 1 .4-.2h9a.5.5 0 0 1 .4.2l2.976 3.974c.149.185.156.45.01.644L8.4 15.3a.5.5 0 0 1-.8 0L.1 5.3a.5.5 0 0 1 0-.6l3-4zm11.386 3.785-1.806-2.41-.776 2.413 2.582-.003zm-3.633.004.961-2.989H4.186l.963 2.995 5.704-.006zM5.47 5.495 8 13.366l2.532-7.876-5.062.005zm-1.371-.999-.78-2.422-1.818 2.425 2.598-.003zM1.499 5.5l5.113 6.817-2.192-6.82L1.5 5.5zm7.889 6.817 5.123-6.83-2.928.002-2.195 6.828z" />
                                </svg>
                                @Html.DisplayFor(model => item.Ad)
                            </td>
                            <td id="premium">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark " style="height:40px">Peržiūrėti prekę</a>
                            </td>
                        }
                        else if (item.Ad.Equals("PREMIUM"))
                        {
                            <td id="premium">
                                @Html.DisplayFor(model => item.Name)
                            </td>
                            <td id="premium">
                                @Html.DisplayFor(model => item.Price) <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-euro" viewBox="0 0 16 16">
                                    <path d="M4 9.42h1.063C5.4 12.323 7.317 14 10.34 14c.622 0 1.167-.068 1.659-.185v-1.3c-.484.119-1.045.17-1.659.17-2.1 0-3.455-1.198-3.775-3.264h4.017v-.928H6.497v-.936c0-.11 0-.219.008-.329h4.078v-.927H6.618c.388-1.898 1.719-2.985 3.723-2.985.614 0 1.175.05 1.659.177V2.194A6.617 6.617 0 0 0 10.341 2c-2.928 0-4.82 1.569-5.244 4.3H4v.928h1.01v1.265H4v.928z" />
                                </svg>
                            </td>
                            <td id="premium" style="color: palevioletred; font-size: 18px; font-weight: 900; ">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-short" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 12a.5.5 0 0 0 .5-.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 .5.5z" />
                                </svg>
                                @Html.DisplayFor(model => item.Ad)
                            </td>
                            <td id="premium">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark " style="height:40px">Peržiūrėti prekę</a>
                            </td>

                        }
                        else if (item.Ad.Equals("EKONOMIŠKA"))
                        {
                            <td id="eko">
                                @Html.DisplayFor(model => item.Name)
                            </td>
                            <td id="eko">
                                @Html.DisplayFor(model => item.Price) <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-euro" viewBox="0 0 16 16">
                                    <path d="M4 9.42h1.063C5.4 12.323 7.317 14 10.34 14c.622 0 1.167-.068 1.659-.185v-1.3c-.484.119-1.045.17-1.659.17-2.1 0-3.455-1.198-3.775-3.264h4.017v-.928H6.497v-.936c0-.11 0-.219.008-.329h4.078v-.927H6.618c.388-1.898 1.719-2.985 3.723-2.985.614 0 1.175.05 1.659.177V2.194A6.617 6.617 0 0 0 10.341 2c-2.928 0-4.82 1.569-5.244 4.3H4v.928h1.01v1.265H4v.928z" />
                                </svg>
                            </td>
                            <td id="eko" style="color: deepskyblue; font-size: 15px; font-weight: 500; ">

                                @Html.DisplayFor(model => item.Ad)
                            </td>
                            <td id="premium">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark " style="height:40px">Peržiūrėti prekę</a>
                            </td>
                        }
                        else
                        {
                            <td id="eko">
                                @Html.DisplayFor(model => item.Name)
                            </td>
                            <td id="eko">
                                @Html.DisplayFor(model => item.Price) <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-euro" viewBox="0 0 16 16">
                                    <path d="M4 9.42h1.063C5.4 12.323 7.317 14 10.34 14c.622 0 1.167-.068 1.659-.185v-1.3c-.484.119-1.045.17-1.659.17-2.1 0-3.455-1.198-3.775-3.264h4.017v-.928H6.497v-.936c0-.11 0-.219.008-.329h4.078v-.927H6.618c.388-1.898 1.719-2.985 3.723-2.985.614 0 1.175.05 1.659.177V2.194A6.617 6.617 0 0 0 10.341 2c-2.928 0-4.82 1.569-5.244 4.3H4v.928h1.01v1.265H4v.928z" />
                                </svg>
                            </td>
                            <td>

                                @Html.DisplayFor(model => item.Ad)
                            </td>
                            <td id="premium">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark " style="height:40px">Peržiūrėti prekę</a>
                            </td>
                        }


                    </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
</body>

</html>
