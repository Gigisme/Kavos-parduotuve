@model MvcMovie.Models.Preke

<body>

    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Atnaujinti prekę</h2>
                <hr />
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Pavadinimas
                </div>
                <div class="col-8">
                    <input required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Reikalingas pavadinimas')" class="form-control" name="Name" value="@Model.Name"/>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    Aprašymas
                </div>
                <div class="col-8">
                    <input required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Reikalingas aprašymas')" class="form-control" name="Description" value="@Model.Description"/>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Kaina
                </div>
                <div class="col-8">
                    <input required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Reikalinga kaina')" class="form-control" name="Price" value="@Model.Price"/>

                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    Svoris
                </div>
                <div class="col-8">
                    <input required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Reikalingas svoris')" class="form-control" name="Weight" value="@Model.Weight" />

                </div>
            </div>

            <div class="form-group row">
                <button type="submit" class="btn btn-primary" style="width:150px">Redaguoti</button>
                <a asp-controller="Preke" asp-action="Index" class="btn btn-secondary" style="width:150px">Atgal</a>
            </div>
        </div>
    </form>



</body>


