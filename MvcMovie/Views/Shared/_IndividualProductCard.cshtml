@model MvcMovie.Models.Preke

<div class="col-lg-4 col-md-6 pb-4 filter">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.Name</label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format("{0:c0}", Model.Price)</span></label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@Model.Image" alt="Card image cap" style=" height: 250px; ">
        <div class="card-body p-1 px-3 row">
            <div class="col-12">
                
                    <a asp-action="Update" asp-controller="Preke" class="btn btn-primary">Redaguoti</a>
                    
                    <a asp-action="Delete" class="btn btn-danger">Ištrinti</a>
                
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p> @Model.Description</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="BuyAd"  class="btn btn-warning form-control btn-sm p-2" style="height:40px">Pirkti reklamą</a>
                <br><br />
                <a asp-action="Details" asp-route-id="" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Peržiūrėti prekę</a>
            </div>
        </div>
    </div>
</div>
