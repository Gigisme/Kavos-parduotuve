
@{
    ViewData["Title"] = "Redaguoti profilį";
}
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

        <style>
            input, label {
                display:block;
            }
        </style>
    </head>

    <body>
        <div class="text-center">
            <h2>Profilio redagavimas</h2>
        </div>

    <form name="editprofile" method="post">
        <section>
            <center>
            <label for="name">Vardas</label>
            <input id="name" type="text" value="" name="name" placeholder="Mantas">
            <label for="surname">Pavardė</label>
            <input id="surname" type="text" value="" name="surname" placeholder="Mantauskas">
            <label for="phone">Telefono nr.</label>
            <input id="phone" type="text" value="" name="phone" placeholder="+37060000000">
            <label for="email">El. pašto adresas</label>
            <input id="email" type="text" value="" name="email" placeholder="Manmant@gmail.com">
            <label for="password">Slaptažodis</label>
            <input id="password" type="text" value="" name="password" placeholder="zxkpo41">
            <label>&nbsp;</label>
            <input type="button" value="Išsaugoti" onclick="window.location= '@Url.Action( "Index", "Profilis")'" />
            </div>
            </center>
        </section>
    </form>
    </body>

</html>
